<?xml version="1.0"?>
<ruleset name="Symfony2EpamCi">
    <description>The Symfony2 Continuous Integration coding standard. Based on PSR-2.</description>

    <!-- 2. General -->

    <!-- 2.1 Basic Coding Standard -->

    <!-- Include the whole PSR-2 standard -->
    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <!-- 2.2 Files -->

    <rule ref="Generic.Files.ByteOrderMark"/>
</ruleset>
